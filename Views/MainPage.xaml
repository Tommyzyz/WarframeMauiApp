<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:WarframeMauiApp.ViewModels"
			 x:Class="WarframeMauiApp.Views.MainPage"
			 x:DataType="vm:MainViewModel">

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*" BackgroundColor="Aqua">
        <FlexLayout JustifyContent="SpaceAround" AlignItems="Center" Wrap="Wrap" BackgroundColor="Crimson">
            <Grid RowDefinitions="2*,*">
                <Image Aspect="Center">
                    <Image.Source>
                        <FontImageSource Glyph="{Binding EarthstateSource}" FontFamily="{StaticResource SeguiEMJ}" Size="75"/>
                    </Image.Source>
                </Image>
                <Label Text="{Binding EarthTimeLeftString, StringFormat='地球:{0}'}" 
                       Grid.Row="1" HorizontalOptions="Center" />
            </Grid>
            <Grid RowDefinitions="2*,*">
                <Image Aspect="Center" Source="{FontImage Size=75, Color=Aquamarine, FontFamily={StaticResource SeguiEMJ}, Glyph=&#x1F505;}"/>
                <Label  Text="{Binding CetusTimeLeftString, StringFormat='希图斯:{0}'}" 
                        Grid.Row="1" HorizontalOptions="Center" />
            </Grid>
            <Grid RowDefinitions="2*,*,*">
                <Image Aspect="AspectFit"  Source="{Binding CambionimageSource}"/>
                <Label Grid.Row="1" HorizontalOptions="Center" Text="&#xF1DB;"/>
                <Label  Text="{Binding CambionTimeLeftString, StringFormat='火卫二:{0}'}" 
                        Grid.Row="2" HorizontalOptions="Center" />
            </Grid>
            <Grid RowDefinitions="2*,*">
                <Image Aspect="Center" Source="{FontImage Size=75, Color=Aquamarine, FontFamily={StaticResource FluentIcons}, Glyph=&#xE7AC;}"/>
                <Label  Text="{Binding VallisTimeLeftString, StringFormat='金星:{0}'}"                         
                        Grid.Row="1" HorizontalOptions="Center" />
            </Grid>
            <Grid RowDefinitions="2*,*,*">
                <Image Aspect="AspectFit"  Source="{Binding ZarimanimageSource}" HeightRequest="100" WidthRequest="100"/>
                <Label Grid.Row="1" HorizontalOptions="Center" Text="afcadfc"/>
                <Label  Text="{Binding ZarimanTimeLeftString, StringFormat='扎里曼{0}'}"                  
                        Grid.Row="2" HorizontalOptions="Center" />
            </Grid>






        </FlexLayout>
        <Label Grid.Column="1" Text="{Binding ArchonHuntData.boss}"/>
    </Grid>

    

</ContentPage>
